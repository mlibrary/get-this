<h1>
  <a href="<%=item.catalog_url%>" class="get-url"><%=item.title%></a><br>
  <span class="subtle-heading">Select how to get this item</span>
</h1>

<div style="grid-column: 1;">

<div class="error-summary">
  <h2 style="margin-top: 0; font-size: 1rem; margin-bottom: var(--space-xx-small);">There is a problem with scheduling your pickup</h2>
  <p><a href="#date">Pickup date: Your date must be in year, month, then day digit format of YYYY-MM-DD</a></p>
  <p><a href="#date">The item is unavailable for the date you requested</a></p>
</div>

<% options.each do |option| %>
  <% if option.type == "book-this" %>
    <%= erb :"options/book-this", locals: {option: option} %> 
  <%else %>
    "Not available." 
  <%end %>
<% end %>

</div>

<aside class="get-this-metdata">
  <h2 class="subtle-heading">Item details</h2>
  <dl class="record">
    <dt>Title</dt><dd><%=item.title%></dd>
    <!--<dt>Location</dt><dd><%=item.library%></a></dd>-->
    <dt>Call number</dt><dd><%=item.call_number%></dd>
    <dt>Barcode</dt><dd><%=item.barcode%></dd>
  </dl>

  <a href=<%=item.catalog_url%>>View item record</a>
</aside>
<% if dev_login? %>
  <%= erb :development_options %>
<% end %>
