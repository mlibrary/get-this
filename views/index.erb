<h1 id="maincontent" tabindex="-1">
  <a href="<%=item.catalog_url%>"><%=item.title%></a>
  <span class="subtle-heading">Select how to get this item</span>
</h1>

<%= my_styled_flash %>

<% options.each do |option| %>
  <% if option.type == "book-this" %>
    <%= erb :"options/book-this", locals: {option: option} %> 
  <% else %>
    "Not available." 
  <% end %>
<% end %>

